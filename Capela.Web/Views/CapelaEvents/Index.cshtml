@model IEnumerable<Capela.Web.Entities.CapelaEvents>

<div class="container-fluid" id="event-header-container">
    <div class="container">
        <h1 id="pastoral-h1" style="color:white;">Eventos Paroquiais</h1>
        <p style="color:white; font-size:18px;">
            Aqui temos uma lista de todos os eventos da Paróquia. Para saber mais é só clicar no evento desejado. Fiquei à vontade, talvez você encontre algum evento que você possa ir!
        </p>
    </div>
</div>
<div class="container-fluid" id="events-header">

</div>

<div class="container">
    <br />

    @if (Request.IsAuthenticated) {
        <p>
            <a class="btn btn-main" href="~/CapelaEvents/Create">Adicionar Novo Evento</a>
            @*@Html.ActionLink("Create New", "Create")*@
        </p>
    }

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Photo)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>

</div>
